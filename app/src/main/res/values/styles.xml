<resources>

    <!-- Base application theme. -->
    <style name="mAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- API 14 theme customizations can go here. -->
        <item name="colorPrimary">@color/theme_puple</item>
        <item name="colorPrimaryDark">@color/theme_pupleDark</item>
        <item name="android:colorBackground">@color/gray_lighter</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:textColorSecondaryInverse">@android:color/black</item>
        <item name="android:windowBackground">@color/darker_gray</item>

    </style>

    <!-- 使用toolbar的activity需要使用这个主题-->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
        <item name="colorPrimary">@color/theme_puple</item>
        <item name="colorPrimaryDark">@color/theme_pupleDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>
    <!--透明背景 主题 在兼容性主题中实现透明效果-->
    <style name="AppTheme.Translucent2" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/theme_puple</item>
        <item name="colorPrimaryDark">@color/theme_pupleDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="bar_text" parent="Theme.AppCompat.Light">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>



    <style name="text_style.0dp" parent="Theme.AppCompat.Light">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>

    </style>

    <style name="text_style">

        <item name="android:textColor">@color/link_text_color</item>
        <item name="android:textSize">@dimen/textSizeMediu</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/paddingHit</item>
    </style>

    <style name="linearLayout_v">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="linearLayout_h">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--输入款，适应宽度，为了显示后面的一个图标-->
    <style name="editText_width">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="text_style_match">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="text_style_wrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="text_style.weight">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@drawable/sele_text_color_def_purple</item>
        <item name="android:textSize">@dimen/textSizeLarge</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="gridViwe">

        <item name="android:numColumns">3</item>
        <item name="android:horizontalSpacing">4dp</item>
        <item name="android:verticalSpacing">4dp</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="actionbar_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/paddingMediu</item>
        <item name="android:paddingRight">@dimen/paddingMediu</item>
    </style>

    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@animator/activity_slid_left_in</item>
        <item name="android:activityOpenExitAnimation">@animator/activity_slid_left_out</item>
        <item name="android:activityCloseEnterAnimation">@animator/activity_slid_right_in</item>
        <item name="android:activityCloseExitAnimation">@animator/activity_slid_right_out</item>
    </style>

    <!--  &lt;!&ndash; 超链接颜色 &ndash;&gt;
      <style name="LinkBuilder">
          <item name="defaultLinkColor">@color/lake_blue</item>
      </style>-->

    <style name="arcButton">
        <item name="android:layout_width">@dimen/arcButton</item>
        <item name="android:layout_height">@dimen/arcButton</item>
        <item name="android:padding">@dimen/paddingMic</item>
    </style>

    <style name="arcButtonChild">
        <item name="android:layout_width">@dimen/arcButtonChild</item>
        <item name="android:layout_height">@dimen/arcButtonChild</item>
        <item name="android:padding">@dimen/paddingMic</item>
    </style>
</resources>
