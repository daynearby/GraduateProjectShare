<resources>

    <!-- Base application theme. -->
    <style name="mAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- API 14 theme customizations can go here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="linkBuilderStyle">@style/LinkBuilder</item>
        <item name="android:colorBackground">@color/ripple_material_light</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:textColorSecondaryInverse">@android:color/black</item>

    </style>

    <!-- 使用toolbar的activity需要使用这个主题-->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <!--<item name="windowNoTitle">true</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="bar_text" parent="Theme.AppCompat.Light">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>

    </style>

    <style name="text_style.0dp" parent="Theme.AppCompat.Light">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>

    </style>

    <style name="text_style">

        <item name="android:textColor">@color/theme_puple</item>
        <item name="android:textSize">@dimen/textSizeMediu</item>
        <item name="android:drawablePadding">@dimen/paddingHit</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/paddingHit</item>
    </style>


    <style name="text_style_wrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

    </style>

    <style name="linearLayout_v">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="linearLayout_h">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="text_style_match">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="text_style.weight">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@drawable/sele_text_color_def_purple</item>
        <item name="android:textSize">@dimen/textSizeLarge</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="gridViwe">

        <item name="android:numColumns">3</item>
        <item name="android:horizontalSpacing">4dp</item>
        <item name="android:verticalSpacing">4dp</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="actionbar_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/paddingMediu</item>
        <item name="android:paddingRight">@dimen/paddingMediu</item>
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity"  mce_bogus="1">
        <item name="android:activityOpenEnterAnimation">@animator/activity_slid_left_in</item>
        <item name="android:activityOpenExitAnimation">@animator/activity_slid_left_out</item>
        <item name="android:activityCloseEnterAnimation">@animator/activity_slid_right_in</item>
        <item name="android:activityCloseExitAnimation">@animator/activity_slid_right_out</item>
    </style>

    <!-- 超链接颜色 -->
    <style name="LinkBuilder">
        <item name="defaultLinkColor">@color/lake_blue</item>
    </style>

    <style name="arcButton">
        <item name="android:layout_width">@android:dimen/notification_large_icon_width</item>
        <item name="android:layout_height">@android:dimen/notification_large_icon_width</item>
        <item name="android:padding">@dimen/paddingMic</item>
    </style>
    <style name="arcButtonChild">
        <item name="android:layout_width">@dimen/arcButtonChild</item>
        <item name="android:layout_height">@dimen/arcButtonChild</item>
        <item name="android:padding">@dimen/paddingMic</item>
    </style>
</resources>
