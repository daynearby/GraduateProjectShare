<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingRight="@dimen/paddingMic"
    android:orientation="horizontal">


    <android.support.v7.widget.SearchView
        android:id="@+id/sv_map_search_place"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:iconifiedByDefault="true"
        android:imeOptions="actionSearch"
        android:queryHint="@string/txt_search_nearby_place"/>

    <Button
        android:id="@+id/btn_map_search"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_button_height"
        android:background="@drawable/sele_btn_green"
        android:text="@string/txt_search"
        android:textColor="@android:color/white" />
</LinearLayout>