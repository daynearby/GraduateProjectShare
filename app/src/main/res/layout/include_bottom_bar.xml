<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

        <View
            android:id="@+id/view_bottom_bar_divilier"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary_text_disabled_material_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divier_vertical"
            android:gravity="center"
            android:orientation="horizontal"
            android:showDividers="middle">

            <TextView
                android:id="@+id/id_tx_wantogo"
                style="@style/text_style"
                android:drawableLeft="@drawable/icon_wantogo"
                android:drawablePadding="@dimen/paddingHit"
                android:text="@string/tx_wantogo" />

            <TextView
                android:id="@+id/id_hadgo"
                style="@style/text_style"
                android:drawableLeft="@drawable/icon_bottombar_hadgo"
                android:text="@string/hadgo" />

            <TextView
                android:id="@+id/id_tx_comment"
                style="@style/text_style"
                android:drawableLeft="@drawable/icon_bottombar_comment"
                android:text="@string/tx_comment" />
        </LinearLayout>


</LinearLayout>