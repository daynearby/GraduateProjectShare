<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/paddingMic">

    <TextView
        android:id="@+id/tv_actionbar_titile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/paddingMediu"
        android:paddingRight="@dimen/paddingMediu"
        android:text="标题"
        android:textSize="@dimen/textSizeLarge" />

    <Spinner
        android:id="@+id/sp_actionbar_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tv_actionbar_titile"
        android:textAlignment="center"></Spinner>


    <Spinner
        android:id="@+id/sp_actionbar_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_actionbar_titile"
        android:textAlignment="center"></Spinner>

    <TextView
        android:id="@+id/tv_actionbar_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/huizhou"
        android:textSize="@dimen/textSizeSmall"
        android:layout_toRightOf="@id/tv_actionbar_titile"
        android:layout_alignBottom="@id/tv_actionbar_titile"
        android:visibility="gone"
        />
</RelativeLayout>