<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/paddingMic">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/paddingMic">

        <TextView
            android:id="@+id/id_tx_search_item_name"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/huizhou"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/id_tx_search_item_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/huizhou" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/pb_search_item_loading"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_width="@dimen/size_progress_small"
            android:layout_height="@dimen/size_progress_small"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/progress_ring_small"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/im_search_item_checked"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:scaleType="centerInside"
            android:src="@drawable/icon_checked"

            />
    </LinearLayout>
</RelativeLayout>