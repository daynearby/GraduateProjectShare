<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="@dimen/paddingMediu"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/paddingMediu">


            <EditText
                android:id="@+id/et_login_email"
                style="@style/bar_text"
                android:hint="@string/user_name"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/paddingMediu"
                android:paddingRight="@dimen/paddingMediu"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/light_gray"
                android:textSize="@dimen/textSizeLarge" >
                <requestFocus/>
            </EditText>

            <EditText
                android:id="@+id/et_login_pwd"
                style="@style/bar_text"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/paddingMediu"
                android:paddingRight="@dimen/paddingMediu"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeLarge"
                android:hint="@string/pwd"
                android:textColorHint="@color/light_gray"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_login_forgetPwd"
            style="@style/text_style_wrap"
            android:padding="@dimen/paddingMic"
            android:text="@string/forget_pwd"
            android:layout_gravity="right"
            android:textColor="@drawable/sele_text_color_def_back"
            android:textSize="@dimen/textSizeMediu" />

        <TextView
            android:id="@+id/tv_login_register"
            style="@style/text_style_wrap"
            android:layout_gravity="right"
            android:padding="@dimen/paddingMic"
            android:text="@string/regist"
            android:textColor="@drawable/sele_text_color_def_back"
            android:textSize="@dimen/textSizeMediu" />


        <TextView
            android:id="@+id/tv_login_btn"
            style="@style/bar_text"
            android:layout_marginLeft="@dimen/paddingLarg"
            android:layout_marginRight="@dimen/paddingLarg"
            android:background="@drawable/sele_login_btn"
            android:gravity="center"
            android:padding="@dimen/paddingMediu"
            android:text="@string/login_text"
            android:textSize="@dimen/textSizeMediu" />
    </LinearLayout>
</RelativeLayout>