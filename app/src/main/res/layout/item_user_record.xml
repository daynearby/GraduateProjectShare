<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/paddingHit"
    android:layout_marginBottom="@dimen/paddingHit"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/radius_mic">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/im_message_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerInside"

            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/paddingMediu">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_post_message_day"
                android:textSize="@dimen/textSizeXLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="1"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_post_message_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/txt_post_message_day"
                android:layout_toRightOf="@id/txt_post_message_day"
                android:ems="2"
                android:paddingBottom="@dimen/paddingHit"
                android:textColor="@android:color/black"
                android:textStyle="bold" />


        </RelativeLayout>


        <ImageView
            android:id="@+id/im_post_message_video"
            android:layout_width="@dimen/size_imbtn"
            android:layout_height="@dimen/size_imbtn"
            android:layout_marginLeft="@dimen/paddingHit"
            android:background="@color/gray"
            android:scaleType="centerCrop"
            android:visibility="gone" />


            <com.young.share.views.MultiImageView.MultiThumbnailImageView
            android:id="@+id/mv_post_message_images"
                android:layout_width="@dimen/size_imbtn"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/paddingHit"
            android:scrollbars="none"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/paddingHit"
            android:paddingRight="@dimen/paddingHit">

            <TextView
                android:id="@+id/txt_post_message_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:maxLines="3"
                android:padding="@dimen/paddingHit"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txt_post_message_images_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="@dimen/paddingHit" />
        </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_post_message_locationinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>