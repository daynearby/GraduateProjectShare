<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_content_popupwin_share"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_contnent_popupwin_title"
        style="@style/text_style_match"
        android:background="@color/theme_puple"
        android:gravity="center"
        android:padding="@dimen/paddingMic"
        android:text="@string/let_me_share"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/paddingMic">


        <LinearLayout
            style="@style/text_style_match"
            android:layout_marginTop="@dimen/paddingMic"
            android:background="@drawable/bg_rectangle"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_contnent_popupwin_content"
                style="@style/text_style_match"
                android:layout_marginLeft="@dimen/paddingHit"
                android:layout_marginRight="@dimen/paddingHit"
                android:layout_marginTop="@dimen/paddingHit"
                android:background="@color/white"
                android:gravity="start"
                android:hint="@string/share_what_hint"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:minLines="3"
                android:padding="@dimen/paddingHit" />


            <GridView
                android:id="@+id/gv_content_popupwin_share_addimg"
                style="@style/gridViwe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/paddingMic"
                android:visibility="visible" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingMic"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/tab30" />

                <Spinner
                    android:id="@+id/sp_content_popupwin_share_seletag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_content_popupwin_share_lacation_i"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_location_info"
                android:gravity="center"
                android:paddingLeft="@dimen/paddingMediu"
                android:text="@string/share_location_info"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textSizeMediu"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divier_vertical"
            android:orientation="horizontal"
            android:showDividers="middle">

            <TextView
                android:id="@+id/tv_contnent_popupwin_cancel"
                style="@style/text_style.weight"
                android:text="@string/cancel" />

            <TextView
                android:id="@+id/tv_contnent_popupwin_send"
                style="@style/text_style.weight"
                android:text="@string/share"
                android:textSize="@dimen/textSizeLarge" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>