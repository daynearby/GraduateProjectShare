<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llayout_disvocer_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/sw_refresh_pager_discover"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/list_discover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:dividerHeight="@dimen/micro_px"
            android:divider="@null" />
    </android.support.v4.widget.SwipeRefreshLayout>
<!--提示-->
    <ImageView
        android:id="@+id/im_discover_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/icon_conten_empty"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

</RelativeLayout>