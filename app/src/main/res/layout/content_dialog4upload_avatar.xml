<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/paddingMediu"
        android:paddingTop="@dimen/paddingMediu">
    <TextView
        android:id="@+id/tv_content_dialog4upload_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/paddingMic"
        android:text="title"
        android:textColor="@color/theme_puple"
        android:textSize="@dimen/textSizeMediu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paddingMic"
        android:divider="@drawable/divier_vertical"
        android:orientation="horizontal"
        android:showDividers="middle">

        <TextView
            android:id="@+id/dialog_frag_real_name_btn_local_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/textSizeMediu"
            android:padding="@dimen/paddingMic"
            android:text="选择图库" />

        <TextView
            android:id="@+id/dialog_frag_real_name_btn_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/textSizeMediu"
            android:gravity="center"
            android:padding="@dimen/paddingMic"
            android:text="拍照" />
    </LinearLayout>


</LinearLayout>
</RelativeLayout>