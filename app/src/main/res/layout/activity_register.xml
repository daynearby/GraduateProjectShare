<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="@dimen/paddingMediu">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/paddingMic">

            <TextView
                style="@style/text_style_wrap"
                android:text="@string/account"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSizeLarge" />

            <EditText
                android:id="@+id/et_reg_phone"
                style="@style/editText_width"
                android:hint="@string/txt_phone_number"
                android:inputType="phone"
                android:paddingLeft="@dimen/paddingMediu"
                android:singleLine="true"
                android:textColorHint="@color/light_gray"
                android:textColor="@android:color/white">

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/txt_reg_get_identify_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minHeight="1dp"
                android:minWidth="1dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="@string/txt_get_identify_code"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/paddingMic">

            <TextView
                style="@style/text_style_wrap"
                android:text="@string/pwd"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSizeLarge" />

            <EditText
                android:id="@+id/et_register_pwd"
                style="@style/editText_width"
                android:hint="@string/txt_pwd_min_length"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/paddingMediu"
                android:singleLine="true"
                android:textColorHint="@color/light_gray"
                android:textColor="@android:color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/paddingMic">

            <TextView
                style="@style/text_style_wrap"
                android:text="@string/pwd"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSizeLarge" />

            <EditText
                android:id="@+id/et_register_config_pwd"
                style="@style/editText_width"
                android:hint="@string/config_pwd"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/paddingMediu"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="@color/light_gray"
                 />


        </LinearLayout>
        <TextView
            android:id="@+id/tv_go_login"
            style="@style/text_style_wrap"
            android:layout_gravity="right"
            android:padding="@dimen/paddingMic"
            android:text="@string/had_register"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSizeMediu" />

        <TextView
            android:id="@+id/tv_register_btn"
            style="@style/bar_text"
            android:layout_marginLeft="@dimen/paddingLarg"
            android:layout_marginRight="@dimen/paddingLarg"
            android:background="@drawable/sele_login_btn"
            android:gravity="center"
            android:padding="@dimen/paddingMediu"
            android:text="@string/regist"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSizeMediu" />
    </LinearLayout>
</RelativeLayout>