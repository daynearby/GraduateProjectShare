<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent"
    android:orientation="vertical"
    android:padding="@dimen/paddingMediu"
    android:id="@+id/dialog4uploadtips_layout"
    >

    <TextView
        android:id="@+id/tv_dialog4tips_title"
        android:textSize="@dimen/textSizeLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="温馨提示" />

    <TextView
        android:id="@+id/tv_dialog4tips_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/paddingMediu"
        android:text="提示文字"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divier_vertical"
        android:showDividers="middle"
        android:paddingLeft="@dimen/paddingMediu"
        android:paddingRight="@dimen/paddingMediu"
        android:paddingTop="@dimen/paddingMediu"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_dialog4tips_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:textSize="@dimen/textSizeMediu"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textColor="@drawable/sele_text_color"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/tv_dialog4tips_config"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSizeMediu"
            android:gravity="center"
            android:text="@string/config"
            android:textColor="@drawable/sele_text_color"

            />
    </LinearLayout>



</LinearLayout>