<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/im_activity_personal_head_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@color/gray"/>


    <LinearLayout
        style="@style/linearLayout_v"
        android:layout_centerInParent="true"
        android:gravity="center">

        <com.young.share.views.CircleImageView
            android:id="@+id/id_im_personal_avatar"
            android:layout_width="@dimen/avatar_size_mediu"
            android:layout_height="@dimen/avatar_size_mediu"
            android:scaleType="centerInside"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_user_nickname"
            style="@style/text_style_wrap"
            android:layout_gravity="center"
            android:text="@string/user_name_defual"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeMediu" />

        <TextView
            android:id="@+id/tv_user_signture"
            style="@style/text_style_wrap"
            android:gravity="center_horizontal"
            android:text="@string/user_info_hint_enjoy_life"
            android:textColor="@color/white" />
    </LinearLayout>



</RelativeLayout>