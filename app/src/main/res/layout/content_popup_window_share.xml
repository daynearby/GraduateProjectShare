<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_rectangle"
    android:orientation="vertical"
    android:padding="@dimen/paddingMic">

    <TextView
        android:id="@+id/tv_contnent_popupwin_title"
        style="@style/text_style_match"
        android:background="@color/theme_puple"
        android:gravity="center"
        android:padding="@dimen/paddingMic"
        android:text="@string/let_me_share"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeLarge" />

    <LinearLayout
        style="@style/text_style_match"
        android:orientation="horizontal"
        android:background="@drawable/bg_rectangle"
        >

        <com.young.views.mEditView
            android:id="@+id/et_contnent_popupwin_content"
            style="@style/text_style_match"
            android:layout_marginTop="@dimen/paddingMic"
            android:background="@color/white"
            android:gravity="start"
            android:hint="@string/share_what_hint"
            android:inputType="textMultiLine"
            android:maxLines="6"
            android:minLines="5"
            android:padding="@dimen/paddingMic" />


        <GridView
            android:id="@+id/gv_content_popupwin_share_addimg"
            style="@style/gridViwe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:padding="@dimen/paddingMic"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paddingMic"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/sp_content_popupwin_share_seletag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_content_popupwin_share_lacation_i"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableLeft="@drawable/tab30"
            android:drawablePadding="@dimen/paddingMic"
            android:text="@string/share_location_info"
            android:textColor="@drawable/sele_text_color_def_purple"
            android:textSize="@dimen/textSizeMediu" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divier_vertical"
        android:showDividers="middle"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_contnent_popupwin_cancel"
            style="@style/text_style.weight"
            android:text="@string/cancel"/>
        <TextView
            android:id="@+id/tv_contnent_popupwin_send"
            style="@style/text_style.weight"
            android:text="@string/share"
            android:textSize="@dimen/textSizeLarge"/>

    </LinearLayout>

</LinearLayout>